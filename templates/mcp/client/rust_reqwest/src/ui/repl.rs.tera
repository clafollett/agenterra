        let client = create_test_client_with_profile(vec![], vec![]).await;
        let mut repl = McpRepl::new(client, "test-server".to_string());

        // Test with very short timeout - in test environment this will hit EOF immediately
        // which is the correct graceful behavior (returns Deny)
        let result = repl
            .prompt_user_permission_with_timeout(
                "test_tool",
                &json!({}),
                std::time::Duration::from_millis(1),
            )
            .await;
        
        // In test environment, EOF is hit immediately which returns Ok(Deny)
        // This demonstrates the graceful handling works correctly
        assert!(result.is_ok(), "Should handle EOF gracefully");
        if let Ok(response) = result {
            assert_eq!(response, PermissionResponse::Deny, "Should deny on EOF");
        }
    }
