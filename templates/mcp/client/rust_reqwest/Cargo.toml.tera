[package]
name = "{{ project_name }}"
version = "{{ version }}"
edition = "2024"
description = "{{ description }}"
license = "MIT"
authors = ["Generated by Agenterra"]
repository = ""
homepage = ""
keywords = ["mcp", "client", "tools", "ai", "{{ project_name }}"]
categories = ["api-bindings", "command-line-utilities"]

[[bin]]
name = "{{ cli_binary_name }}"
path = "src/main.rs"

[features]
default = ["stdio"]
stdio = []
sse = []
test-utils = []

[dev-dependencies]
# Enable test-utils feature for tests
{{ project_name }} = { path = ".", features = ["test-utils"] }

[dependencies]
# MCP Protocol SDK (official)
agenterra-rmcp = { version = "0.1.5", features = [
    "client",
    "transport-child-process",
    "transport-sse-client"
] }

# HTTP Client
reqwest = { version = "0.12", features = ["json", "rustls-tls"], default-features = false }

# Async Runtime
tokio = { version = "1.0", features = ["full"] }

# CLI and REPL
clap = { version = "4.5", features = ["derive"] }
rustyline = "16.0"

# Serialization
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"

# Error Handling
anyhow = "1.0"
thiserror = "2.0"

# Logging
tracing = "0.1"
tracing-subscriber = { version = "0.3", features = ["env-filter"] }

# Utilities
url = "2.4"
futures = "0.3"
base64 = "0.22"
base64-simd = "0.8"

# Security and memory management  
zeroize = { version = "1.8", features = ["derive"] }
rpassword = "7.3"

# Concurrency primitives
once_cell = "1.19"
async-trait = "0.1"

# SQLite for resource caching
rusqlite = { version = "0.36", features = ["bundled"] }
rusqlite_migration = "2.2.0"
uuid = { version = "1.17", features = ["v4"] }
chrono = { version = "0.4", features = ["serde"] }
# Connection pooling
r2d2 = "0.8"
r2d2_sqlite = "0.30"
# Directory utilities
dirs = "6.0"
# Unicode normalization for security
unicode-normalization = "0.1.24"
# Unicode segmentation for grapheme cluster analysis
unicode-segmentation = "1.10"
# Unicode script detection for homograph attack detection
unicode-script = "0.5"
# Unicode category detection for character classification
unicode_categories = "0.1"
# Configuration file parsing
toml = "0.8"
# Regular expressions for pattern matching
regex = "1.10"

# Prevent cargo from thinking this is part of a parent workspace
[workspace]