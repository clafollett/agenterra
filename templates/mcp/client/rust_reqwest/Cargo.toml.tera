[package]
name = "{{ project_name | default(value="mcp_client") }}"
version = "{{ version | default(value="0.1.0") }}"
edition = "{{ rust_edition | default(value="2024") }}"
description = "{{ description | default(value="MCP client for agenterra") }}"
license = "{{ license | default(value="MIT") }}"
authors = ["{{ author | default(value="Generated by Agenterra") }}"]
repository = "{{ repository_url | default(value="") }}"
homepage = "{{ homepage | default(value="") }}"
keywords = ["mcp", "client", "tools", "ai", "{{ project_name | default(value="mcp") }}"]
categories = ["api-bindings", "command-line-utilities"]

[[bin]]
name = "{{ cli_binary_name | default(value="mcp_client") }}"
path = "src/main.rs"

[dependencies]
# MCP Protocol SDK (official)
rmcp = { git = "https://github.com/modelcontextprotocol/rust-sdk", branch = "main", features = [
    "client",
    "transport-child-process"
] }

# HTTP Client
reqwest = { version = "0.11", features = ["json", "rustls-tls"], default-features = false }

# Async Runtime
tokio = { version = "{{ tokio_version | default(value="1.0") }}", features = ["{{ tokio_features | default(value="full") }}"] }

# CLI and REPL
clap = { version = "{{ clap_version | default(value="4.4") }}", features = ["derive"] }
rustyline = "{{ rustyline_version | default(value="13.0") }}"

# Serialization
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"

# Error Handling
anyhow = "1.0"
thiserror = "1.0"

# Logging
tracing = "0.1"
tracing-subscriber = { version = "0.3", features = ["env-filter"] }

# Utilities
url = "2.4"
futures = "0.3"
base64 = "0.22"

# Security and memory management  
zeroize = { version = "{{ zeroize_version | default(value="1.7") }}", features = ["derive"] }

# Concurrency primitives
once_cell = "1.19"
async-trait = "{{ async_trait_version | default(value="0.1") }}"

# SQLite for resource caching
rusqlite = { version = "{{ rusqlite_version | default(value="0.32") }}", features = ["{{ rusqlite_features | default(value="bundled") }}"] }
uuid = { version = "{{ uuid_version | default(value="1.0") }}", features = ["v4"] }
chrono = { version = "{{ chrono_version | default(value="0.4") }}", features = ["serde"] }
# Connection pooling
r2d2 = "0.8"
r2d2_sqlite = "0.25"
# Directory utilities
dirs = "5.0"

[dev-dependencies]
tempfile = "3.0"