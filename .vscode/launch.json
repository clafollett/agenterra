    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug MCPGen - scaffold - OpenAPI v3",
            "program": "${workspaceFolder}/target/debug/mcpgen",
            "args": [
                "scaffold",
                "--spec",
                "${workspaceFolder}/tests/fixtures/openapi/petstore.openapi.v3.json",
                "--template",
                "rust-axum",
                "--template-dir",
                "${workspaceFolder}/templates/rust-axum",
                "--output",
                "${workspaceFolder}/.mcpgen/rust-axum-scaffold-test"
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "rust: cargo build"
        }
    ]
}